{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/build/*",
    "**/node_modules",
    "**/public/*",
    "**/tsconfig.json",
    "**/assets/*",
    "**/ios/*",
    "**/android/*",
    "**/patches/*",
    "**/.bundle/*",
    "**/__tests__/*",
    "**/.husky/*"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "multiline-ternary": "off"
  }
}
